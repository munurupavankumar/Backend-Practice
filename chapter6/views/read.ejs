<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheet/styles.css">
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white">
        <div class="nav mb-10">
            <a href="/" class="text-blue-500">Home</a>
        </div>
        <h1 class="text-3xl mb-3 tracking-tighter">All Users</h1>
        <div class="users flex flex-wrap gap-3">
            <% if ( users.length === 0 ) { %>
                <h1 class="text-zinc-500">No users yet</h1>
            <% } else { %>
                <% users.forEach(user => { %>
                    <div class="user max-w-72 bg-zinc-800 rounded-lg p-4">
                        <div class="w-full h-72 bg-zinc-400 rounded-lg overflow-hidden">
                            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %> </h3>
                        <h5 class="text-zinc-500"><%= user.email %></h5>
                        <div class="flex gap-45 mt-10">
                            <a href="/edit/<%= user._id %>" class="text-zinc-200">Edit</a>
                            <a href="/delete/<%= user._id %>" class="text-red-500">Delete</a>
                        </div>
                    </div>
                <% }) %>  
            <% } %>
        </div>
    </div>
</body>
</html>